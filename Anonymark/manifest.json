{
    "manifest_version": 2,

    "name": "Anonymark",
    "description": "Displays hidden watermark on files created with Anonymark",
    "version": "1.0",

    "browser_action": {
        "default_icon": "resources/icon.png"
    },
    "background": {
        "scripts": ["resources/jquery-3.1.1.min.js", "background.js"],
        "pages": ["display.html"]
    },
    "icons": {
        "16": "resources/icon.png",
        "48": "resources/icon-48.png",
        "128": "resources/icon-128.png"
    },
    "permissions": [
        "contextMenus",
        "tabs",
        "http://api.wordnik.com/"
    ]
}
