{
    "manifest_version": 2,

    "name": "Anonymark",
    "description": "Displays hidden watermark on files created with Anonymark",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["support_scripts/jquery-3.1.1.js", "background.js"]
    },
    "icons": {
        "16": "icon.png"
    },
    "permissions": [
        "contextMenus",
        "tabs"
    ]
}
